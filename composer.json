{
    "name": "cambis/silverstripe-module",
    "description": "A personal boilerplate for silverstripe modules.",
    "license": "MIT",
    "type": "silverstripe-vendormodule",
    "keywords": [
        "silverstripe"
    ],
    "require": {
        "php": "^8.3",
        "silverstripe/framework": "^5.4"
    },
    "require-dev": {
        "cambis/silverstan": "^2.1",
        "cambis/silverstripe-rector": "^2.1",
        "ergebnis/composer-normalize": "^2.42",
        "php-parallel-lint/php-parallel-lint": "^1.4",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^2.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0",
        "phpstan/phpstan-strict-rules": "^2.0",
        "phpunit/phpunit": "^9.5",
        "rector/rector": "^2.1",
        "slevomat/coding-standard": "^8.14",
        "symplify/easy-coding-standard": "^13.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Cambis\\SilverstripeModule\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Cambis\\SilverstripeModule\\Tests\\": "tests"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "phpstan/extension-installer": true,
            "silverstripe/vendor-plugin": true
        },
        "sort-packages": true
    },
    "scripts": {
        "lint": [
            "vendor/bin/parallel-lint src tests --colors --blame",
            "vendor/bin/rector process --dry-run --ansi",
            "vendor/bin/ecs check --ansi",
            "vendor/bin/phpstan analyse --ansi --memory-limit=-1"
        ],
        "lint:fix": [
            "vendor/bin/ecs check --fix --ansi"
        ]
    }
}
